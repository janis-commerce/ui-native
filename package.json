{
	"name": "ui-native",
	"version": "0.0.1",
	"description": "components library for Janis app",
	"main": "index.js",
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start": "react-native start",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"prepare": "husky install",
		"release:minor": "standard-version --release-as minor",
		"release:patch": "standard-version --release-as patch",
		"release:major": "standard-version --release-as major",
		"validate-code": "npm run lint -- --fix  && jest --collectCoverage",
		"test-commit": "jest --colors --c jestApp.config.json --bail --findRelatedTests",
		"test:coverage": "jest --collectCoverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/janis-commerce/ui-native.git"
	},
	"keywords": [
		"janis",
		"app",
		"ui"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/janis-commerce/ui-native/issues"
	},
	"homepage": "https://github.com/janis-commerce/ui-native#readme",
	"peerDependencies": {
		"react": "16.13.1",
		"react-native": "0.63.4"
	},
	"devDependencies": {
		"react": "16.13.1",
		"react-native": "0.63.4",
		"@babel/core": "^7.8.4",
		"@babel/runtime": "^7.8.4",
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@react-native-community/eslint-config": "^1.1.0",
		"@testing-library/react-native": "^7.2.0",
		"@types/jest": "^25.2.3",
		"@types/react-native": "^0.63.2",
		"@types/react-test-renderer": "^16.9.2",
		"@typescript-eslint/parser": "^5.32.0",
		"babel-jest": "^25.1.0",
		"eslint": "^7.21.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-import-resolver-babel-module": "^5.2.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-native": "^4.0.0",
		"husky": "^8.0.1",
		"jest": "^25.1.0",
		"jest-expo": "^41.0.0",
		"metro-react-native-babel-preset": "^0.59.0",
		"react-test-renderer": "16.13.1",
		"standard-version": "^9.5.0",
		"typescript": "^3.8.3"
	},
	"resolutions": {
		"@types/react": "^16"
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
